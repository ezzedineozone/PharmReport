<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="PharmReport.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PharmReport"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    Title="PharmReport">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="0"/>
            <RowDefinition Height="46"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="2" Grid.Column="1">
            
        </Grid>
        <StackPanel Grid.Row="0" Grid.RowSpan="3" Grid.Column="0" 
                    Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}"
                    Orientation="Vertical" Name="SidePanel">
            <muxc:Button Height="60" HorizontalAlignment="Stretch" PointerEntered="OnSidePanelButtonEntered" PointerExited="OnSidePanelButtonExited" Name="AddReceiptButton">
                <StackPanel FlowDirection="LeftToRight" Orientation="Horizontal">
                    <muxc:SymbolIcon Symbol="Add" Width="60" />
                    <TextBlock Tag="SidePanelButtonDescription" Visibility="Collapsed" Margin="0,2,0,0" TextAlignment="Center" HorizontalTextAlignment="Center" Text="Create Receipt" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Stretch" FontWeight="Bold" />
                </StackPanel>
            </muxc:Button>
            <muxc:Button Height="60" HorizontalAlignment="Stretch" PointerEntered="OnSidePanelButtonEntered" PointerExited="OnSidePanelButtonExited" Name="ViewReceiptsButton">
                <StackPanel FlowDirection="LeftToRight" Orientation="Horizontal" >
                    <muxc:SymbolIcon Symbol="List" Width="60" />
                    <TextBlock Tag="SidePanelButtonDescription" Visibility="Collapsed" Margin="0,2,0,0" TextAlignment="Center" HorizontalTextAlignment="Center" Text="View Receipts" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Stretch" FontWeight="Bold"/>
                </StackPanel>
            </muxc:Button>
        </StackPanel>
    </Grid>
</Window>
